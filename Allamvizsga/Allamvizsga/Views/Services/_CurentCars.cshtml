



<div class="container">

    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#inputCarModal">Add</button>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Identifier</th>
                <th>Owner</th>
                <th>OwnerPhoneNumber</th>
                <th>Price</th>
                <th>Repaires</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: services">
            <tr>
                <td data-bind="text: identifier"></td>
                <td data-bind="text: owner.lastName"></td>
                <td data-bind="text: owner.phoneNumber"></td>
                <td>
                <div class="form-group row col-sm-4">
                     <input type="text" class="form-control">
                 </div>
                </td>
                <td><button type="button" class="btn-primary btn-sm" data-toggle="modal" data-target="#inputRepairesModal"  data-bind="click: $root.setCarRepairesData.bind($data)">Repaires</button></td>
                <td><button type="button" class="btn-primary btn-sm" data-bind="click: $root.endedCar.bind($data)">Ended</button></td>
            </tr>
        </tbody>
    </table>
    </div>

<div class="container">
    
    
    <!-- Modal -->
    <div class="modal fade" id="inputCarModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog vertical-align-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>

                        </button>
                        <h4 class="modal-title" id="myModalLabel">Input Car</h4>

                    </div>
                    <div class="modal-body">@Html.Partial("_InputCar")</div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-info btn-lg" data-bind="click: addCar">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="inputRepairesModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog vertical-align-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>

                        </button>
                        <h4 class="modal-title">Repaires</h4>

                    </div>
                    <div class="modal-body">@Html.Partial("_Repaires")</div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-info btn-lg" data-bind="click: saveRepair">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

   